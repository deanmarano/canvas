!!! 5
%html
  %head
    %meta{ :charset => "utf-8" }/
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/
    %title Dean's Canvas

    %link{ :href => "stylesheets/site.css?v=1", :media => "all", :rel => "stylesheet" }/

  %body
    .image.pull-left
      %canvas#canvas
    .data.pull-left
      #picker.pull-left
        hi
      .actions.pull-left
        %button#invert Invert
        %button#grayscale_average Grayscale By Average
        %button#grayscale_luminosity Grayscale By Luminosity
        %button#blur Smooth (3x3 Average)
        %button#colorSegment Segment by Color
        %button#segment Segment
        %button#showNextSegment Show Next Segment
        %button#restore Restore Original
      .clearfix
      #histogram
        %ul

      %canvas#secondCanvas
    #templates
      #histogramBar
        %li{:style => 'width: {{width}}px'}
          %p.emptySpace{:style => "height: {{whitespaceHeight}}px;"}
          %p.bar{:style => 'height: {{barHeight}}px;'}
            {{value}}

    =javascript_include_tag 'app'
